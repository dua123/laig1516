<?xml version="1.0" encoding="UTF-16" standalone="yes"?>
<yaf>

    <globals background="0 0.5 0 1" drawmode="fill" shading="gouraud" cullface="none" cullorder="CCW" /> 
    
	<list>
		<elem id="2" coords="0 0 1" />
		<elem id="4" coords="0 1 0" />
		<elem id="3" coords="1 0 0" />
	</list>

	<INITIALS>
	    <frustum near="0.2" far="0.5"/>                      <!-- frustum planes-->
	    <translate x="0.5" y="0.5" z="0.5" />                 <!-- initial translate -->
	    <rotation axis="y" angle="0.5" />                  <!-- initial rotation 3 -->
	    <rotation axis="z" angle="1" />                  <!-- initial rotation 2 -->
	    <rotation axis="x" angle="0.2" />                  <!-- initial rotation 1 -->
	    <scale sx="2" sy="5" sz="7" />                  <!-- initial scaling -->
	    <reference length="2" />                          <!-- axis length; "0" means no axis-->
	</INITIALS>

	<ILLUMINATION>
	    <ambient r="1" g="1" b="0.8" a="1" />            <!-- global ambient -->
	    <doubleside value="tt" />                          <!-- double or single side illum. -->
	    <background r="0.1" g="0.75" b="0.25" a="1" />         <!-- background color -->
	</ILLUMINATION>

	<LIGHTS>
    <LIGHT id="2">                                    <!-- light identifier -->
        <enable value ="1" />                         <!-- enable/disable -->
        <position x="1" y="1" z="1" w="1" />       <!-- light position -->
        <ambient r="3" g="ff" b="ff" a="ff" />        <!-- ambient component -->
        <diffuse r="5" g="ff" b="ff" a="ff" />        <!-- diffuse component -->
        <specular r="7" g="ff" b="ff" a="8" />       <!-- specular component -->
    </LIGHT>

    <LIGHT id="1">                                    <!-- light identifier -->
        <enable value ="1" />                         <!-- enable/disable -->
        <position x="2" y="2" z="2" w="2" />       <!-- light position -->
        <ambient r="4" g="ff" b="ff" a="ff" />        <!-- ambient component -->
        <diffuse r="6" g="ff" b="ff" a="ff" />        <!-- diffuse component -->
        <specular r="8" g="ff" b="ff" a="ff" />       <!-- specular component -->
    </LIGHT>
    </LIGHTS>

    <TEXTURES>
    <TEXTURE id="1">
        <file path="../resources/images/nothing.png" />                             <!-- path to file -->
        <amplif_factor s="0" t="0" />                <!-- x/s, y/t -->
    </TEXTURE>

    <!-- NOTE: this block "TEXTURE" must be repeated as necessary with different "id" -->
    
	</TEXTURES>

    <!-- NOTE: this block "LIGHT" must be repeated as necessary with different "id" -->
    


	
	
</yaf> 
