<?xml version="1.0" encoding="UTF-16" standalone="yes"?>
<yaf>

    <globals background="0 0.5 0 1" drawmode="fill" shading="gouraud" cullface="none" cullorder="CCW" /> 
    
	<INITIALS>
	    <frustum near="0.1" far="500"/>                      <!-- frustum planes-->
	    <translate x="15" y="15" z="15" />                 <!-- initial translate -->
	    <rotation axis="y" angle="1" />                  <!-- initial rotation 3 -->
	    <rotation axis="z" angle="1" />                  <!-- initial rotation 2 -->
	    <rotation axis="x" angle="1" />                  <!-- initial rotation 1 -->
	    <scale sx="0" sy="0" sz="0" />                  <!-- initial scaling -->
	    <reference length="2" />                          <!-- axis length; "0" means no axis-->
	</INITIALS>

	<ILLUMINATION>
	    <ambient r="1" g="1" b="0.8" a="1" />            <!-- global ambient -->
	    <doubleside value="tt" />                          <!-- double or single side illum. -->
	    <background r="0.1" g="0.75" b="0.25" a="1" />         <!-- background color -->
	</ILLUMINATION>

	<LIGHTS>
    <LIGHT id="2">                                    <!-- light identifier -->
        <enable value ="1" />                         <!-- enable/disable -->
        <position x="1" y="1" z="1" w="1" />       <!-- light position -->
        <ambient r="3" g="ff" b="ff" a="ff" />        <!-- ambient component -->
        <diffuse r="5" g="ff" b="ff" a="ff" />        <!-- diffuse component -->
        <specular r="7" g="ff" b="ff" a="8" />       <!-- specular component -->
    </LIGHT>

    <LIGHT id="1">                                    <!-- light identifier -->
        <enable value ="1" />                         <!-- enable/disable -->
        <position x="2" y="2" z="2" w="2" />       <!-- light position -->
        <ambient r="4" g="ff" b="ff" a="ff" />        <!-- ambient component -->
        <diffuse r="6" g="ff" b="ff" a="ff" />        <!-- diffuse component -->
        <specular r="8" g="ff" b="ff" a="ff" />       <!-- specular component -->
    	</LIGHT>
    </LIGHTS>

    <TEXTURES>
    <TEXTURE id="1">
        <file path="../resources/images/nothing.png" />                             <!-- path to file -->
        <amplif_factor s="0" t="0" />                <!-- x/s, y/t -->
    </TEXTURE>

    <!-- NOTE: this block "TEXTURE" must be repeated as necessary with different "id" -->
    
	</TEXTURES>

	<MATERIALS>
		<MATERIAL id="2">
			<shininess value="1"/>
			<ambient r="4" g="6" b="8" a="1" />        <!-- ambient component -->
			<diffuse r="6" g="6" b="6" a="1" />        <!-- diffuse component -->
				<specular r="8" g="4" b="5" a="1" />       <!-- specular component -->
				<emission r="8" g="4" b="5" a="1" />       <!-- emission component CHANGE VALUES -->
		</MATERIAL>
	</MATERIALS>

    <!-- NOTE: this block "LIGHT" must be repeated as necessary with different "id" -->
    <LEAVES>
		<LEAF id="L1" type="rectangle" args ="-2 3 6 -1"/>
		<LEAF id="L2" type="cylinder" args="3.5 0.5 0.5 8 20"/>
	</LEAVES>
    <NODES>
		<ROOT id="1"/>

		<NODE id="1">
			<DESCENDENTS>
				<DESCENDANT id="2"/>
				<DESCENDANT id="3"/>
			</DESCENDENTS>
		</NODE>

		<NODE id="2">
			<MATERIAL id=""/>
			<TEXTURE id=""/>
			<TRANSLATION x="1" y="0" z="0"/>
			<ROTATION axis="x" angle="90"/>
			<DESCENDENTS>
				<DESCENDANT id="L1"/>
			</DESCENDENTS>
		</NODE>
		<NODE id="3">
			<MATERIAL id=""/>
			<TEXTURE id=""/>
			<ROTATION axis="x" angle="-90"/>
			<DESCENDENTS>
				<DESCENDANT id="4"/>
				<DESCENDANT id="5"/>
				<DESCENDANT id="6"/>
				<DESCENDANT id="7"/>
			</DESCENDENTS>
		</NODE>
		<NODE id="4">
			<MATERIAL id=""/>
			<TEXTURE id=""/>
			<TRANSLATION x="1" y="0" z="0"/>
			<ROTATION axis="x" angle="90"/>
			<DESCENDENTS>
				<DESCENDANT id="L1"/>
			</DESCENDENTS>
		</NODE>
		<NODE id="5">
			<MATERIAL id=""/>
			<TEXTURE id=""/>
			<TRANSLATION x="1" y="0" z="0"/>
			<ROTATION axis="x" angle="90"/>
			<DESCENDENTS>
				<DESCENDANT id="L1"/>
			</DESCENDENTS>
		</NODE>
		<NODE id="6">
			<MATERIAL id=""/>
			<TEXTURE id=""/>
			<TRANSLATION x="1" y="0" z="0"/>
			<ROTATION axis="x" angle="90"/>
			<DESCENDENTS>
				<DESCENDANT id="L1"/>
			</DESCENDENTS>
		</NODE>
		<NODE id="7">
			<MATERIAL id=null/>
			<TEXTURE id=null/>
			<TRANSLATION x="4" y="0" z="2"/>
			<DESCENDENTS>
				<DESCENDANT id="L2"/>
			</DESCENDENTS>
		</NODE>
		<NODE id="7">
				<MATERIAL id=null/>
				<TEXTURE id=null/>
				<TRANSLATION x="4" y="0" z="2"/>
				<DESCENDENTS>
				<DESCENDANT id="L2"/>
				</DESCENDENTS>
			</NODE>
	</NODES>


	
	
</yaf> 
